{
  //  "extends": "@vue/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "types": [
      "node",
      "dom.iterable",
      "vue",
      "jest",
      // "components.d.ts",
      "env.d.ts"
    ],
    "lib": ["dom", "esnext"],
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": false,
    "importsNotUsedAsValues": "preserve",
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "preserveValueImports": false,
    "incremental": true,
    "declarationMap": true
  },
  "include": [
    // "./components.d.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/*.tsx",
    "playground/**/*.ts",
    "playground/**/*.tsx",
    "playground/**/*.d.ts",
    "playground/**/*.vue",
    "**/*.d.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "./@types", "dist", "packages/**/*.test.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
